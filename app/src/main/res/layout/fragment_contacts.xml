<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        android:background="@color/common_topbar_bg_color">

        <TextView
            android:id="@+id/tv_contacts_topbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="联系人"
            android:textColor="@color/common_topbar_text_font_color"
            android:textSize="@dimen/common_topbar_text_font_size"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_contacts_topbar_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/creativedetail_topbar_margin_left"
            android:background="@drawable/topbar_addfriend"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fffffbfa"
            android:paddingBottom="@dimen/youshi_friend_member_search_input_padding_top_or_bottom"
            android:paddingLeft="@dimen/friend_member_search_input_padding_left_or_right"
            android:paddingRight="@dimen/friend_member_search_input_padding_left_or_right"
            android:paddingTop="@dimen/youshi_friend_member_search_input_padding_top_or_bottom">

            <com.mkch.youshi.view.CustomEditText
                android:id="@+id/search_input_contacts"
                android:layout_width="@dimen/youshi_friend_member_search_input_width"
                android:layout_height="@dimen/youshi_friend_member_search_input_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_search_input"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="@dimen/friend_member_search_input_drawable_padding"
                android:drawableRight="@drawable/ic_edit_text_delbtn"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:hint="搜索"
                android:imeOptions="actionSearch"
                android:paddingBottom="@dimen/member_search_input_et_padding_top_or_bottom"
                android:paddingTop="@dimen/member_search_input_et_padding_top_or_bottom"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="#ffb5b5b5"
                android:textSize="@dimen/member_search_input_et_text_size"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/list_contacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@drawable/bg_cut_line"
                android:dividerHeight="1px"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"/>

            <TextView
                android:id="@+id/dialog_contacts"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="center"
                android:background="@drawable/contact_select_pinyin_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="45sp"
                android:visibility="gone"/>

            <com.mkch.youshi.view.SideBar
                android:id="@+id/sidebar_contacts"
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:layout_gravity="right"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>