<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_topbar_height"
    android:background="@color/main_tabbar_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/tv_schedule_file_item0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/main_tabbar_item_text_font_color_unsel"
            android:textSize="@dimen/friend_information_text_size" />

        <TextView
            android:id="@+id/tv_schedule_file_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="今天"
            android:textColor="@color/main_tabbar_item_text_font_color_unsel"
            android:textSize="@dimen/friend_information_text_size" />

        <TextView
            android:id="@+id/tv_schedule_file_item2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="昨天"
            android:textColor="@color/main_tabbar_item_text_font_color_unsel"
            android:textSize="@dimen/friend_information_text_size" />

        <TextView
            android:id="@+id/tv_schedule_file_item3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一周内"
            android:textColor="@color/main_tabbar_item_text_font_color_unsel"
            android:textSize="@dimen/friend_information_text_size" />

        <TextView
            android:id="@+id/tv_schedule_file_item4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一周前"
            android:textColor="@color/main_tabbar_item_text_font_color_unsel"
            android:textSize="@dimen/friend_information_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/tab_schedule_file_under_line"
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:background="@color/common_topbar_bg_color"></TextView>
</LinearLayout>
