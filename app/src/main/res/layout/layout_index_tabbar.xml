<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_tabbar_height"
    android:background="@color/main_tabbar_bg_color"
    android:orientation="horizontal" >
    <include 
        android:id="@+id/index_today_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        layout="@layout/layout_index_tab_item"
        />

    <include 
        android:id="@+id/index_message_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        layout="@layout/layout_index_tab_item"
        />
    
    <include 
        android:id="@+id/index_contact_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        layout="@layout/layout_index_tab_item"
        />
    
    <include 
        android:id="@+id/index_pscenter_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        layout="@layout/layout_index_tab_item"
        />
    
</LinearLayout>
