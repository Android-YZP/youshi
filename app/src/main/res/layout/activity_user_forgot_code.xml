<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <include
        layout="@layout/layout_common_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height" />

    <EditText
        android:id="@+id/et_user_forgot_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_reg_phone_et_height"
        android:layout_marginTop="@dimen/user_reg_phone_et_phone_margin_top"
        android:background="@drawable/bg_border_common_et"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="@dimen/user_reg_phone_et_phone_text_padding_left"
        android:textColor="@color/common_et_text_font_color"
        android:textSize="@dimen/common_et_text_font_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_reg_phone_et_phone_margin_top"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_user_forgot_code"
            android:layout_width="@dimen/user_reg_phone_et_width"
            android:layout_height="@dimen/user_reg_phone_et_height"
            android:background="@drawable/bg_border_common_et"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/user_reg_phone_et_phone_text_padding_left"
            android:textColor="@color/common_et_text_font_color"
            android:textSize="@dimen/common_et_text_font_size" />

        <Button
            android:id="@+id/btn_user_forgot_code_get"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_reg_phone_et_height"
            android:layout_marginLeft="@dimen/user_forget_phone_btn_margin_left"
            android:background="@drawable/selector_btn_user_login"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/common_white_color"
            android:textSize="@dimen/user_login_commit_text_font_size" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_user_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_reg_phone_et_height"
        android:layout_marginTop="@dimen/user_reg_phone_btn_getcode_margin_top"
        android:background="@drawable/bg_border_common_et"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="@dimen/user_reg_phone_et_phone_text_padding_left"
        android:textColor="@color/common_et_text_font_color"
        android:textSize="@dimen/common_et_text_font_size" />

    <EditText
        android:id="@+id/et_user_forgot_password_again"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_reg_phone_et_height"
        android:background="@drawable/bg_border_common_et"
        android:hint="请确认新密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="@dimen/user_reg_phone_et_phone_text_padding_left"
        android:textColor="@color/common_et_text_font_color"
        android:textSize="@dimen/common_et_text_font_size" />

    <Button
        android:id="@+id/btn_user_forgot_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_reg_phone_btn_getcode_height"
        android:layout_marginLeft="@dimen/user_forget_phone_btn_getcode_margin_left_or_right"
        android:layout_marginRight="@dimen/user_forget_phone_btn_getcode_margin_left_or_right"
        android:layout_marginTop="@dimen/user_reg_phone_btn_getcode_margin_top"
        android:background="@drawable/selector_btn_user_login"
        android:gravity="center"
        android:text="确认重置"
        android:textColor="@color/common_white_color"
        android:textSize="@dimen/user_login_commit_text_font_size" />

    <TextView
        android:id="@+id/tv_user_forgot_code_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/user_reg_phone_text_read_protocal_margin_left"
        android:layout_marginTop="@dimen/user_reg_phone_text_read_protocal_margin_top"
        android:text="重新发送验证码(60s)"
        android:textColor="@color/user_reg_phone_et_text_font_color"
        android:textSize="@dimen/user_reg_phone_text_read_protocal_text_font_size" />
</LinearLayout>
