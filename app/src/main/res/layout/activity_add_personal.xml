<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddPersonalActivity">

    <include
        layout="@layout/layout_common_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height" />

    <RelativeLayout
        android:id="@+id/rl_event"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            style="@style/TextViewStyle"
            android:drawableLeft="@drawable/icon_event"
            android:text="事件" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_black_color"
            android:padding="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="20dp"
            android:src="@drawable/list_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_black_color"
        android:padding="10dp" />

    <RelativeLayout
        android:id="@+id/rl_affair"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            style="@style/TextViewStyle"
            android:drawableLeft="@drawable/icon_affair"
            android:text="事务" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="20dp"
            android:src="@drawable/list_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_black_color"
        android:padding="10dp" />

    <RelativeLayout
        android:id="@+id/rl_habit"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            style="@style/TextViewStyle"
            android:drawableLeft="@drawable/icon_habit"
            android:text="习惯" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="20dp"
            android:src="@drawable/list_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_black_color"
        android:padding="10dp" />
</LinearLayout>
