<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_color">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        layout="@layout/layout_common_topbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_bg_color"
            android:paddingBottom="@dimen/youshi_friend_member_search_input_padding_top_or_bottom"
            android:paddingLeft="@dimen/friend_member_search_input_padding_left_or_right"
            android:paddingRight="@dimen/friend_member_search_input_padding_left_or_right"
            android:paddingTop="@dimen/youshi_friend_member_search_input_padding_top_or_bottom">

            <com.mkch.youshi.view.CustomEditText
                android:id="@+id/et_group_chat_search"
                android:layout_width="@dimen/youshi_friend_member_search_input_width"
                android:layout_height="@dimen/youshi_friend_member_search_input_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_search_input"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="@dimen/friend_member_search_input_drawable_padding"
                android:drawableRight="@drawable/ic_edit_text_delbtn"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:hint="搜索"
                android:textCursorDrawable="@null"
                android:imeOptions="actionSearch"
                android:paddingBottom="@dimen/member_search_input_et_padding_top_or_bottom"
                android:paddingTop="@dimen/member_search_input_et_padding_top_or_bottom"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="#ffb5b5b5"
                android:textSize="@dimen/member_search_input_et_text_size"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/list_group_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@drawable/list_item_divider"
                android:dividerHeight="1px"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"/>

            <TextView
                android:id="@+id/tv_group_chat_dialog"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="center"
                android:background="@drawable/contact_select_pinyin_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="45sp"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
