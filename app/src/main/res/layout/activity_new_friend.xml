<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_color">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"
        layout="@layout/layout_common_topbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_bg_color"
            android:paddingBottom="@dimen/youshi_friend_member_search_input_padding_top_or_bottom"
            android:paddingLeft="@dimen/friend_member_search_input_padding_left_or_right"
            android:paddingRight="@dimen/friend_member_search_input_padding_left_or_right"
            android:paddingTop="@dimen/youshi_friend_member_search_input_padding_top_or_bottom">

            <com.mkch.youshi.view.CustomEditText
                android:id="@+id/search_input_new_friend"
                android:layout_width="@dimen/youshi_friend_member_search_input_width"
                android:layout_height="@dimen/youshi_friend_member_search_input_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_search_input"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="@dimen/friend_member_search_input_drawable_padding"
                android:drawableRight="@drawable/ic_edit_text_delbtn"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:hint="搜索"
                android:imeOptions="actionSearch"
                android:paddingBottom="@dimen/member_search_input_et_padding_top_or_bottom"
                android:paddingTop="@dimen/member_search_input_et_padding_top_or_bottom"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="#ffb5b5b5"
                android:textSize="@dimen/member_search_input_et_text_size"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_new_friend_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_friend_add_phone_height"
            android:background="@color/common_white_color"
            android:paddingTop="@dimen/new_friend_add_phone_padding_top_or_bottom"
            android:paddingBottom="@dimen/new_friend_add_phone_padding_top_or_bottom"
            android:layout_marginBottom="@dimen/new_friend_add_phone_margin_bottom"
            android:gravity="center">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawableTop="@drawable/phone"
               android:drawablePadding="@dimen/new_friend_add_phone_text_padding"
               android:text="添加手机联系人"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/list_new_friend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@drawable/bg_cut_line"
                android:dividerHeight="1px"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
