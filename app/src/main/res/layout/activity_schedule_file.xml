<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <include
        layout="@layout/layout_common_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height" />

    <com.mkch.youshi.view.ScheduleFileTabBarLayout
        android:id="@+id/custom_schedule_file_tabbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height"></com.mkch.youshi.view.ScheduleFileTabBarLayout>

    <View style="@style/commonLineStyle" />

    <View
        style="@style/commonLineStyle"
        android:layout_marginTop="@dimen/friend_information_margin_top" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_schedule_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
</LinearLayout>