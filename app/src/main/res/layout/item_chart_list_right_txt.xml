<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_chat_list_right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="23dp"
        android:background="#D2D2D2"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="6dp"
        android:text="2016-09-01 16:00"
        android:textColor="@color/common_white_color"
        android:textSize="12sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="75dp"
        android:paddingTop="5dp"
        android:layout_marginBottom="5dp"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_right_user"
                style="@style/common_text_username_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="用户2"
                />

            <TextView
                android:id="@+id/tv_right_say_content"
                style="@style/common_text_msg_content_white_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/chat_content_blue"
                android:paddingBottom="10dp"
                android:paddingRight="25dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="好"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_chat_list_right_headpic"
            android:layout_width="@dimen/chat_list_left_headpic_width_or_height"
            android:layout_height="@dimen/chat_list_left_headpic_width_or_height"
            />
    </LinearLayout>
</LinearLayout>