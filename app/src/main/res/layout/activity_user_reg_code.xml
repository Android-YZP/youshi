<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <include
        layout="@layout/layout_common_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_topbar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/user_reg_code_intro_line_margin_left_or_right"
        android:layout_marginRight="@dimen/user_reg_code_intro_line_margin_left_or_right"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_reg_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/user_reg_code_intro_text_margin_top_or_bottom"
            android:layout_marginTop="@dimen/user_reg_code_intro_text_margin_top_or_bottom"
            android:lineSpacingMultiplier="1.2"
            android:text="您的手机15861521065会收到一条含有4位数字验证码的短信"
            android:textColor="@color/common_content_text_font_color"
            android:textSize="@dimen/user_reg_code_intro_text_font_size" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_user_reg_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_reg_phone_et_height"
        android:background="@drawable/bg_border_common_et"
        android:hint="请输入验证码"
        android:inputType="number"
        android:maxLength="6"
        android:paddingLeft="@dimen/user_reg_phone_et_phone_text_padding_left"
        android:textColor="@color/common_et_text_font_color"
        android:textSize="@dimen/common_et_text_font_size" />

    <Button
        android:id="@+id/btn_user_reg_getcode_code_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_reg_phone_btn_getcode_height"
        android:layout_marginLeft="@dimen/user_reg_phone_btn_getcode_margin_left_or_right"
        android:layout_marginRight="@dimen/user_reg_phone_btn_getcode_margin_left_or_right"
        android:layout_marginTop="@dimen/user_reg_phone_btn_getcode_margin_top"
        android:background="@drawable/selector_btn_user_login"
        android:gravity="center"
        android:maxLength="4"
        android:text="确认"
        android:textColor="@color/common_white_color"
        android:textSize="@dimen/user_login_commit_text_font_size" />

    <TextView
        android:id="@+id/tv_user_reg_code_getcode_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/user_reg_phone_text_read_protocal_margin_left"
        android:layout_marginTop="@dimen/user_reg_phone_text_read_protocal_margin_top"
        android:text="重新发送验证码(60s)"
        android:textColor="@color/user_reg_phone_et_text_font_color"
        android:textSize="@dimen/user_reg_phone_text_read_protocal_text_font_size" />
</LinearLayout>
