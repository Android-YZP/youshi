<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:text="开始时间"
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_dialog_time_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2016年9月2日"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="20sp" />
    </LinearLayout>


    <View style="@style/lineOfDialog" />

    <com.mkch.youshi.view.TimePickerView
        android:id="@+id/tpv_allday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        style="@style/lineOfAffairList"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/tv_dialog_choose_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="完成"
        android:textColor="@color/text_black"
        android:textSize="18sp" />
</LinearLayout>