<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="weekName">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 自定义checkbox主题 -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_common_checkbox</item>
        <item name="android:width">@dimen/user_reg_phone_checkbox_read_protocal_width_or_height
        </item>
        <item name="android:height">@dimen/user_reg_phone_checkbox_read_protocal_width_or_height
        </item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_common_checkbox_allow</item>
        <item name="android:maxHeight">10.0dp</item>
        <item name="android:height">31dp</item>
        <item name="android:width">51dp</item>
    </style>

    <!--新建个人日程TextView-->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/personal_event_text_color</item>
        <item name="android:textSize">@dimen/person_event_text_font_size</item>
    </style>


    <!--白色24号字体-->
    <style name="textStyleWhite24">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--黑色28号字体-->
    <style name="textStyleBlack28">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--灰色24号字体-->
    <style name="textStyleGray24">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--灰色24号字体-->
    <style name="textBigStyleGray24">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--事件编辑界面右边样式-->
    <style name="lastOfAffairList" parent="textStyleGray24">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <!--事件编辑界面左边大标题样式-->
    <style name="firstOfAffairList" parent="textStyleBlack28">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    <!--事件编辑界面边界线样式-->
    <style name="lineOfAffairList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/week_day_line</item>
    </style>

    <style name="lineOfDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5px</item>
        <item name="android:background">@color/common_topbar_bg_color</item>
    </style>

    <color name="personal_event_text_color">#313131</color>
    <color name="text_white">#ffffff</color>
    <color name="text_black">#313131</color>
    <color name="text_gray">#959595</color>
    <color name="common_line_input_bg_color">#d6d6d8</color>
    <dimen name="person_event_text_font_size">14sp</dimen>

    <!--消息列表-自定义搜索框风格-->
    <style name="commonEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_et_height</item>
        <item name="android:layout_marginLeft">@dimen/message_et_search_margin_left_or_right</item>
        <item name="android:layout_marginRight">@dimen/message_et_search_margin_left_or_right</item>
        <item name="android:hint">搜索</item>
        <item name="android:background">@color/common_white_color</item>
        <item name="android:textSize">@dimen/common_et_text_font_size</item>
        <item name="android:textColor">@color/common_et_text_font_color</item>
        <item name="android:textColorHint">@color/common_content_text_font_color</item>
        <item name="android:drawableLeft">@drawable/icon_search</item>
        <item name="android:paddingLeft">@dimen/common_et_padding_left</item>
        <item name="android:drawablePadding">@dimen/common_et_drawable_padding</item>

    </style>

    <!--消息列表-自定义直线style-->
    <style name="commonLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/common_line_bg_color</item>

    </style>

    <!--消息列表-自定义直线style-->
    <style name="commonLineInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/common_line_input_bg_color</item>

    </style>

    <!--消息列表-自定义消息数量style-->
    <style name="commonMsgNumsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:background">@drawable/sharp_item_msg_round_nums</item>
        <item name="android:textColor">@color/common_white_color</item>
        <item name="android:textSize">12sp</item>

    </style>

    <!--消息列表-黑色28px字体-->
    <style name="common_text_black_28">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#313131</item>
    </style>

    <!--消息列表-灰色24px字体-->
    <style name="common_text_gray_24">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#959595</item>
    </style>
    <!--对话框的动画样式-->
    <style name="dialog_style" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="remind_checkbox_style" parent="lastOfAffairList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/remind_before_common_checkbox_allow</item>
        <item name="android:button">@null</item>
    </style>

    <!--聊天消息名字-浅黑色24px字体-->
    <style name="common_text_username_24">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#626262</item>
    </style>

    <!--聊天消息名字-消息白色24px字体-->
    <style name="common_text_msg_content_white_28">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--所有界面的返回按钮-->
    <style name="commonTopbarBackStyle">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--所有的进入箭头style-->
    <style name="commonArrowStyle">
        <item name="android:layout_width">@dimen/user_center_arrow_width_or_height</item>
        <item name="android:layout_height">@dimen/user_center_arrow_width_or_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/list_arrow</item>
    </style>

    <style name="common_detial_black" parent="common_text_black_28">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="detial_gray" parent="textStyleGray24">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 自定义progressDialog主题 -->
    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--zhangjun-->

    <!--yaozhongping-->

    <!--jianglongjian-->


</resources>
