<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="weekName">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 自定义checkbox主题 -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/selector_common_checkbox</item>
    <item name="android:width">@dimen/user_reg_phone_checkbox_read_protocal_width_or_height</item>
    <item name="android:height">@dimen/user_reg_phone_checkbox_read_protocal_width_or_height</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_common_checkbox_allow</item>
        <item name="android:maxHeight">10.0dp</item>
        <item name="android:height">31dp</item>
        <item name="android:width">51dp</item>
    </style>
    <!--新建个人日程TextView-->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/personal_event_text_color</item>
        <item name="android:textSize">@dimen/person_event_text_font_size</item>
    </style>



    <style name="textStyleWhite24">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="textStyleBlack28">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="textStyleGray24">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">12dp</item>
    </style>

    <!-- 自定义checkbox主题 -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/selector_common_checkbox</item>
    <item name="android:width">@dimen/user_reg_phone_checkbox_read_protocal_width_or_height</item>
    <item name="android:height">@dimen/user_reg_phone_checkbox_read_protocal_width_or_height</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_common_checkbox_allow</item>
        <item name="android:maxHeight">10.0dp</item>
        <item name="android:height">31dp</item>
        <item name="android:width">51dp</item>
    </style>
</resources>
